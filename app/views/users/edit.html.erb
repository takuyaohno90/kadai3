<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <!--エラーメッセージ-->
      <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being <br>
      saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>

        <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
        <p>Name</p>
        <%= f.text_field :name, class: "form-control"  %>
        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <p>Introduction</p>
        <%= f.text_area :introduction, class: "form-control"  %>

        <%= f.submit 'Update User', class: "btn btn-secondary mt-2" %>
      <% end %>
    </div>
  </div>
</div>

