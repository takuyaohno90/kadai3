<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <!--エラーメッセージ-->
      <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from </h3>
      <h3>being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <!--編集画面-->
      <%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class: "form-control"  %>

      <p>Opinion</p>
      <%= f.text_area :body, class: "form-control mb-2"  %>

      <%= f.submit 'Update Book', class: "btn btn-success" %>
      <% end %>

      <!--show、backリンク-->
      <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>

    </div>
  </div>
</div>




