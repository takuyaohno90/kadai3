<div>
  <%= flash[:notice] %>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー情報-->
      <%= render 'users/user', user: @user %>
      <!--ユーザー編集画面へ-->
      <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      <% else %>
        <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      <% end %>
      <!--投稿機能-->
      <%= render 'books/book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">

        <tbody>
          <tr>
            <td><%= link_to user_path(@books.user_id) do %>
            <%= image_tag @books.user.get_profile_image(100, 100) %> <br>
            <%= @books.user.name %>
            <% end %></td>
            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>
            <td><% if @books.user == current_user %>
            <%= link_to "Edit", edit_book_path(@books.id), class:"link btn btn-sm btn-success" %>
            <% end %>
            </td>
            <td><% if @books.user == current_user %>
            <%= link_to "Destroy", book_path(@books.id),class:"link btn btn-sm btn-danger", method: :delete, data: {confirm: '本当に削除しますか？'} %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
